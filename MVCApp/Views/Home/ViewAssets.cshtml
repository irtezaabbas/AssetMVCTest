@model IEnumerable<MVCApp.Models.InventoryModel>

@{
    ViewBag.Title = "View Assigned Assets";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">View Assigned Assets</h2>
        <a href="@Url.Action("AssignAsset")" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Create New
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.AssetTag)</th>
                    <th>@Html.DisplayNameFor(model => model.AssetState)</th>
                    <th>@Html.DisplayNameFor(model => model.UsedBy)</th>
                    <th>@Html.DisplayNameFor(model => model.UsageType)</th>
                    <th>@Html.DisplayNameFor(model => model.AssignedOn)</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.AssetTag)</td>
                            <td>@Html.DisplayFor(modelItem => item.AssetState)</td>
                            <td>@Html.DisplayFor(modelItem => item.UsedBy)</td>
                            <td>@Html.DisplayFor(modelItem => item.UsageType)</td>
                            <td>@item.AssignedOn.ToString("yyyy-MM-dd")</td>
                            <td class="text-center">
                                <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-sm btn-warning me-1">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-sm btn-info me-1">
                                    <i class="bi bi-info-circle"></i> Details
                                </a>
                                <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center text-muted">
                            <i>No assets assigned yet.</i>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <!-- Include Bootstrap Icons if not already included -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
}

